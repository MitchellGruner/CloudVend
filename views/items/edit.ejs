<%- include("../partials/header")%>

<form action="/items/<%=items._id%>/update/?_method=PUT" method="POST">
	<div class="container form">
		<h1 id="center">Edit <%=items.name%></h1>
		<div class="spacing">
			<input class="form-control" type="input" name="name" value="<%=items.name%>">
		</div>
		<div class="spacing">
			<input class="form-control" type="input" name="image" value="<%=items.image%>">
		</div>
		<div class="spacing">
			<input class="form-control" type="number" name="price" value="<%=items.price%>" min="0.01" step="0.01">
		</div>
		<div class="spacing">
			<input class="form-control" type="input" name="description" value="<%=items.description%>">	
		</div>
		<div class="spacing">
			<input class="form-control" type="input" name="condition" value="<%=items.condition%>">
		</div>
		
		<button class="btn btn-success">Submit!</button>
		<button class="btn btn-info"><a href="/items">Go Back</a></button>
	</div>