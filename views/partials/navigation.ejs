<article>
    <div>
        <% if (profileExists) { %>
            <a href="/user/<%=profileId%>">
                <figure>
                    <img src="<%=profileImage%>" />
                </figure>
                <h1><span>Visit Profile</span></h1>
            </a>
        <% } else { %>
            <a href="/user/new" class="create-a-new-profile">Create a New Profile</a>
        <% } %>
    </div>

    <div>
        <a href="/user">View All Profiles</a>

        <% if (profileExists) { %>
            <a href="/items/new">Create a New Item</a>
        <% } %>

        <a href="/items/all">View All Items</a>
        <% if (currentUser && currentUser.city) { %>
            <a href="/items/city">View Items in <%= currentUser.city %></a>
        <% } %>
        <a href="/">Home</a>
    </div>
</article>